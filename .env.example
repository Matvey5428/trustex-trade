# Node Environment
NODE_ENV=development
PORT=3000

# Telegram Bot
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Web App URL (URL вашего приложения на Render)
WEB_APP_URL=https://your-app.onrender.com

# Webhook URL (обычно совпадает с WEB_APP_URL, для production)
# WEBHOOK_URL=https://your-app.onrender.com

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Database - ВЫБЕРИ ОДИН из вариантов:

# Вариант 1: Локальный PostgreSQL (для development)
DB_CONNECTION_STRING=postgresql://postgres:postgres@localhost:5432/nexo_trade

# Вариант 2: Neon.tech (рекомендуется для Render - бесплатно)
# DATABASE_URL=postgresql://user:password@ep-xxxx.neon.tech/dbname?sslmode=require

# Вариант 3: PostgreSQL на Render (платно)
# DATABASE_URL=postgresql://user:password@render-host:5432/dbname

# Admin Secret
ADMIN_SECRET=your-admin-secret-key

# Cors
CORS_ORIGIN=http://localhost:3000
